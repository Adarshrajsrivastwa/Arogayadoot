    <script>
        async function fetchDoctors() {
  try {
    const response = await fetch('http://localhost:3000/api/doctors');
    const doctors = await response.json();
    displayDoctors(doctors);
  } catch (error) {
    console.error('Error fetching doctors:', error);
  }
}

function displayDoctors(doctors) {
  const container = document.querySelector('.details');
  container.innerHTML = ''; 

  doctors.forEach(doctor => {
    const doctorCard = document.createElement('div');
    doctorCard.classList.add('doctor-card');
    doctorCard.classList.add('box');

    doctorCard.innerHTML = `
      <h3>${doctor.name}</h3>
      <p><strong>Specialty:</strong> ${doctor.email}</p>
      <p><strong>Contact:</strong> ${doctor.phone}</p>
      <p><strong>Address:</strong> ${doctor.specialization}</p>
      <p><strong>Experience:</strong> ${doctor.certificate} years</p>
      <div class="btnbox"><button class="btn" onclick="updateStatus('${doctor._id}', 'approved')">Approve</button>
      <button class="btn" onclick="updateStatus('${doctor._id}', 'rejected')">Reject</button></div>
    `;
    container.appendChild(doctorCard);
  });
}

// Update doctor status (approve/reject)
async function updateStatus(id, status) {
  try {
    const response = await fetch(`http://localhost:3000/api/doctor/${id}`, {
      method: 'PUT',
      headers: {
        'Content-Type': 'application/json',
      },
      body: JSON.stringify({ status }),
    });
    const updatedDoctor = await response.json();
    alert(`Doctor status updated to ${status}`);
    fetchDoctors(); 
  } catch (error) {
    console.error('Error updating status:', error);
  }
}

