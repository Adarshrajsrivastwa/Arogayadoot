    <script>

async function doctor() {
  try {
    const response = await fetch('http://localhost:3000/api/doctor/confirm');
    const data = await response.json();
    display(data);
  } catch (error) {
    console.error("Fetch error:", error);
  }
}
          function display(data) {
            let doctorList = document.querySelector(".details");
      
            data.forEach(e => {
              let doctorCard = document.createElement("div");
              doctorCard.classList.add("box");
              doctorCard.innerHTML = `
                <div class="first">
                  <div class="photobox"></div>
                </div>
                <div class="second">
                  <h1>${e.name}</h1>
                  <h2><strong>Hospitals:</strong> ${e.hospital}</h2>
                  <h2><strong>Specialization:</strong> ${e.specialization}</h2>
                  <h2><strong>Language Known:</strong> ${e.language}</h2>
                  <h2><strong>Charge:</strong> ${e.charge}</h2>
                  <h2>${e.experience} Years of experience</h2>
                </div>
                <div class="third">
                  <a href="/form"><button class="btn">Book appointment</button></a>
                </div>
              `;
              doctorList.appendChild(doctorCard);
            });
        }
        window.onload = doctor;

      </script>
